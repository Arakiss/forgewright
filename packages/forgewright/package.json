{
  "name": "forgewright",
  "version": "0.1.0",
  "description": "AI-first release system for LLM-assisted development",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "forgewright": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts ./src/cli.ts --outdir ./dist --target bun",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "release",
    "changelog",
    "versioning",
    "ai",
    "llm",
    "claude",
    "cursor",
    "semantic-release",
    "automation",
    "developer-tools"
  ],
  "author": "Arakiss",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arakiss/forgewright.git"
  },
  "bugs": {
    "url": "https://github.com/Arakiss/forgewright/issues"
  },
  "homepage": "https://github.com/Arakiss/forgewright#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@forgewright/core": "workspace:*",
    "@forgewright/ai": "workspace:*",
    "@forgewright/cli": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  }
}
