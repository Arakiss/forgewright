{
  "name": "forgewright",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "catalog": {
    "typescript": "^5.7.0",
    "zod": "^3.25.0",
    "ai": "^6.0.0",
    "@ai-sdk/anthropic": "^3.0.0",
    "@ai-sdk/openai": "^3.0.0",
    "@ai-sdk/google": "^3.0.0",
    "@ai-sdk/xai": "^3.0.0",
    "@ai-sdk/mistral": "^3.0.0",
    "@ai-sdk/openai-compatible": "^1.0.0"
  },
  "scripts": {
    "build": "bun run --filter '*' build",
    "test": "bun test --coverage",
    "test:watch": "bun test --watch",
    "lint": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit",
    "forgewright": "bun run packages/cli/src/index.ts",
    "prepare": "node scripts/setup-hooks.cjs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "typescript": "catalog:",
    "@types/bun": "latest"
  }
}
