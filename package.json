{
  "name": "forgewright",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "catalog": {
    "typescript": "^5.7.0",
    "zod": "^3.25.0",
    "ai": "^4.3.0",
    "@ai-sdk/anthropic": "^1.2.0",
    "@ai-sdk/openai": "^1.3.0",
    "@ai-sdk/google": "^1.2.0"
  },
  "scripts": {
    "build": "bun run --filter '*' build",
    "test": "bun test --coverage",
    "test:watch": "bun test --watch",
    "lint": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit",
    "forgewright": "bun run packages/cli/src/index.ts",
    "prepare": "node scripts/setup-hooks.cjs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "typescript": "catalog:",
    "@types/bun": "latest"
  }
}
